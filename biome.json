{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120,
        "lineEnding": "lf"
    },
    "linter": {
        "rules": {
            "style": {
                "useNodejsImportProtocol": "off"
            },
            "suspicious": {
                "noExplicitAny": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "always",
			"arrowParentheses": "asNeeded"
        }
    },
    "files": {
        "ignore": [
            "packages/vk-io/src/api/schemas"
        ]
    }
}
